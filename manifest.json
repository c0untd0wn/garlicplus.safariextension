{
  "manifest_version": 2,

  "name": "GarlicPlus Image Downloader",
  "description": "Search/Download image with Different Resolution using Google Search",
  "version": "1.0",

  "permissions": [
    "contextMenus",
    "tabs",
    "http://*.google.com/",
    "https://*.google.com/"
  ],
  "content_scripts": [
    {
      "matches": ["http://*.google.com/*", "https://*.google.com/*"],
      "js": ["javascript/jquery-2.0.3.min.js", "javascript/inject.js"],
      "include_globs": ["*garlicplus=search_largest*"]
    }
  ],
  "background": {
    "scripts": ["javascript/script.js"]
  }
}
