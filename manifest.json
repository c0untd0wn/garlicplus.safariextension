{
  "manifest_version": 2,

  "name": "High-quality Image Downloader",
  "description": "Downloads the highest resolution photo from the google image search",
  "version": "1.0",

  "permissions": [
    "contextMenus",
    "tabs",
    "http://*.google.com/",
    "https://*.google.com/"
  ],
  "content_scripts": [
    {
      "matches": ["http://*.google.com/*", "https://*.google.com/*"],
      "js": ["javascript/jquery-2.0.3.min.js", "javascript/inject.js"],
      "include_globs": ["*garlicplus*"]
    }
  ],
  "background": {
    "scripts": ["javascript/script.js"]
  }
}
